<!DOCTYPE html>
<html>
<head>
	<title>LdLolmausRu</title>
	<%= stylesheet_link_tag :all %>
	<%= javascript_include_tag :defaults %>
	<%= csrf_meta_tag %>
</head>
<body id="store">
	<div id="banner">
		<a href="/">
			<%= image_tag("logo.png") %>
			<%= @page_title || "Pragmatic Bookshelf" %>
		</a>
	</div> <!-- store -->

	<div id="columns">
		<div id="side">
			<a href="http://www....">Home</a><br />
			<a href="http://www..../faq">Questions</a><br />
			<a href="http://www..../news">News</a><br />
			<a href="http://www..../contact">Contact</a><br />
			<em id="time"><%= @time %></em><br />
			<%= "<em>You've been here #{pluralize(@index_counter, "time")}.</em><br />".html_safe if @index_counter && (@index_counter >= 5) %>
		</div> <!-- side -->
		<div id="main">
			<%= yield %>
		</div> <!--main -->
	</div> <!-- columns -->

</body>
</html>
